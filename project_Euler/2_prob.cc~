#include<iostream>

using namespace std;

/* This is to solve the problem of finding the sum of 
   all even Fibonacci numbers < 4,000,000
*/

int main(){
  int fibN = 1;
  int fibNplus1 = 2;
  unsigned int sum = 0;
  int temp;
  bool flag = true;
  while(fibNplus1 < 4000000){
    if (flag){
      sum+= fibNplus1;
      flag= false;
    } else
      flag = true;
    temp = fibNplus1 + fibN;
    fibN = fibNplus1;
    fibNplus1 = temp;
  }
  cout<<"Sum = "<<sum<<"\n";
  return 0;
}
